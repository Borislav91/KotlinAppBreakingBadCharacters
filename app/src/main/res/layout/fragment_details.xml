<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailsFragment">


        <ImageView
            android:id="@+id/details_image"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:src="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/details_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/bebas"
            android:text="name goes"
            android:textColor="@color/purple_700"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/details_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/details_image"
            app:layout_constraintTop_toTopOf="@+id/details_image" />


        <TextView
            android:id="@+id/details_occupation_placeholder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bebas"
            android:text="Occupation: "
            android:textColor="@color/purple_700"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/details_image"
            app:layout_constraintTop_toBottomOf="@+id/details_image" />

        <TextView
            android:id="@+id/details_occupation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/bebas"
            android:text="Occupation: "
            android:textColor="@color/purple_700"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/details_appearance"
            app:layout_constraintTop_toTopOf="@+id/details_occupation_placeholder" />

        <TextView
            android:id="@+id/details_status_placeholder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bebas"
            android:text="Status: "
            android:textColor="@color/purple_700"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/details_occupation_placeholder"
            app:layout_constraintTop_toBottomOf="@+id/details_occupation" />

        <TextView
            android:id="@+id/details_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bebas"
            android:text="Status: "
            android:textColor="@color/purple_700"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/details_occupation"
            app:layout_constraintStart_toStartOf="@+id/details_appearance"
            app:layout_constraintTop_toBottomOf="@+id/details_occupation" />


        <TextView
            android:id="@+id/details_nickname_placeholder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bebas"
            android:text="Nickname: "
            android:textColor="@color/purple_700"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/details_status_placeholder"
            app:layout_constraintTop_toBottomOf="@+id/details_status" />

        <TextView
            android:id="@+id/details_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bebas"
            android:text="Nickname: "
            android:textColor="@color/purple_700"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/details_status"
            app:layout_constraintStart_toStartOf="@+id/details_appearance"
            app:layout_constraintTop_toBottomOf="@+id/details_status" />

        <TextView
            android:id="@+id/details_appearance_placeholder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bebas"
            android:text="Appearance: "
            android:textColor="@color/purple_700"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/details_nickname_placeholder"
            app:layout_constraintTop_toBottomOf="@+id/details_nickname" />

        <TextView
            android:id="@+id/details_appearance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/bebas"
            android:text="Appearance: "
            android:textColor="@color/purple_700"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/details_appearance_placeholder"
            app:layout_constraintTop_toBottomOf="@+id/details_nickname" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>